{
  "cli": {
    "version": ">= 0.54.1",
    "requireCommit": true,
  },
  "build": {
    "development": {
      "developmentClient": true,
      "releaseChannel": "development",
      "distribution": "internal",
      "env": {
        "APP_ENV": "development"
      }
    },
    "preview": {
      "releaseChannel": "staging",
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "APP_ENV": "production"
      }
    },
    "production": {
      "releaseChannel": "production",
      "android": {
        "buildType": "app-bundle"
      },
      "env": {
        "APP_ENV": "production"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
